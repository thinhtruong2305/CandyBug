@model CandyBug.Areas.Admin.Model.EF.DonHang

@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
}

<div id="tieuDeBonChuTroXuong">
    <h2>Chỉnh sửa đơn hàng</h2>
</div>

@using (Html.BeginForm("Edit", "OrderManage", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Đơn hàng</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.maHoaDon)

    <div class="form-group">
        @Html.LabelFor(model => model.ngayGiao, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.ngayGiao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ngayGiao, "", new { @class = "text-danger" })
            @ViewBag.ThongBaoNgay
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.trangThai, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.DropDownListFor(model => model.trangThai, new SelectList(ViewBag.DanhSachTrangThai), htmlAttributes: new { @class = "form-control"})
        </div>
    </div>

    <div class="form-group">
        <div id="buttonLink" class="col-md-offset-2 col-md-10">
            <input id="btnSave" type="submit" value="Save" class="btn btn-success" />
            <button class="btn btn-danger">@Html.ActionLink("Quay lại", "Index", "OrderManage")</button>
        </div>
    </div>
</div>
}
