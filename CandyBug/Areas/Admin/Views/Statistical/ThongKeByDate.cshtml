@model List<CandyBug.Areas.Admin.Model.EF.Statistical>

@{
    ViewBag.Title = "ThongKeByDate";
}

<div id="tieuDeBonChuTroLen">
    <h2>Thống kê hóa đơn theo ngày</h2>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().maHoaDon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ngayTao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().tongTien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().trangThai)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.maHoaDon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngayTao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tongTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trangThai)
            </td>
            <td>
                <div id="buttonLink">
                    <button class="btn btn-info">@Html.ActionLink("Details", "Detail", new { @id = item.maHoaDon })</button>
                </div>
            </td>
        </tr>
    }

</table>
<hr />
<div id="buttonLink">
    <button class="btn btn-danger">@Html.ActionLink("Quay lại", "Index", "Statistical")</button>
</div>