        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <li>
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index", "Home", new { Area = "Admin"})">
                    <div class="sidebar-brand-icon rotate-n-15">
                        <img src="~/Content/Admin/img/CandyBug.png" width="90" height="90" />
                    </div>
                    <div class="sidebar-brand-text mx-3">Candy Bug</div>
                </a>
            </li>


            <!-- Divider -->
            <li>
                <hr class="sidebar-divider">
            </li>


            <!--Nav item - Trang chính-->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Home", new { Area = "Admin"})">
                    <img src="~/Content/Admin/img/icons8-home-18.png" width="18" height="18" />
                    <span>Trang chủ</span>
                </a>
            </li>

            <!-- Divider -->
            <li>
                <hr class="sidebar-divider">
            </li>


            <!-- Heading -->
            <li>
                <div class="sidebar-heading">
                    Chức năng
                </div>
            </li>


            <!-- Nav Item - Quản lí Collasp Menu  -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <img src="~/Content/Admin/img/icons8-management-18.png" width="18" height="18" />
                    <span>Quản lí</span>
                </a>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        @*<a class="collapse-item" href="products.html">Sản phẩm</a>*@
                        <a class="collapse-item" href=@Url.Action("Index","QLSP",new { Area = "Admin" })>Sản phẩm</a>
                        <a class="collapse-item" href="category.html">Kho</a>
                    </div>
                </div>
            </li>

            <!-- Nav Item - Quản lí đơn hàng-->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "OrderManage", new { Area = "Admin"})">
                    <img src="~/Content/Admin/img/icons8-purchase-order-18.png" width="18" height="18" />
                    <span>Quản lí đơn hàng</span>
                </a>
            </li>

            <!-- Nav Item - Charts -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Statistical", new { Area = "Admin"})">
                    <img src="~/Content/Admin/img/icons8-combo-chart-18.png" width="18" height="18" />
                    <span>Thống kê</span>
                </a>
            </li>

            <!-- Nav Item - Quản lí tài khoản
    Lưu ý: thay tên Table.html thành QuanLiTaiKhoan.html và chỉnh sửa lại-->
            <li class="nav-item">
                <a class="nav-link" href="account.html">
